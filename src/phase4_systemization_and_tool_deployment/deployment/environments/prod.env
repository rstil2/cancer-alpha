# Production Environment Configuration
ENVIRONMENT=production
API_BASE_URL=https://api.cancer-alpha.com
WEB_APP_URL=https://cancer-alpha.com
REDIS_URL=redis://redis:6379
DATABASE_URL=postgresql://cancer_alpha:${DB_PASSWORD}@postgres:5432/cancer_alpha

# Model Configuration
MODEL_PATH=/app/models/
ENABLE_MOCK_DATA=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/cancer_alpha.log

# Security (Use environment variables or secrets management)
JWT_SECRET=${JWT_SECRET}
API_KEY=${API_KEY}

# Performance
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/cancer-alpha.crt
SSL_KEY_PATH=/etc/ssl/private/cancer-alpha.key

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_INTERVAL=30
